@model GestaoDeFuncionarios.Models.Funcionario

@{
    ViewData["Title"] = "Editar Funcionário";
}

<h1 class="text-center my-4">Editar Funcionário</h1>

<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Editar">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Telefone" class="control-label"></label>
                        <input asp-for="Telefone" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Funcao" class="control-label"></label>
                        <input asp-for="Funcao" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Salario" class="control-label"></label>
                        <input asp-for="Salario" class="form-control" />
                    </div>

                    <div class="form-group text-center mt-4">
                        <input type="submit" value="Salvar Alterações" class="btn btn-primary">
                        <a asp-action="Index" class="btn btn-secondary ml-2">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
