@model GestaoDeFuncionarios.Models.Funcionario

@{
    ViewData["Title"] = "Cadastrar Funcionário";
}

<h1 class="text-center my-4">Cadastrar Novo Funcionário</h1>

<hr>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Cadastrar">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" placeholder="Nome do Funcionário(a)" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Telefone" class="control-label"></label>
                        <input asp-for="Telefone" class="form-control" placeholder="(xx) xxxxx-xxxx" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Funcao" class="control-label"></label>
                        <input asp-for="Funcao" class="form-control" placeholder="Cargo ou Função" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Salario" class="control-label"></label>
                        <input asp-for="Salario" class="form-control" type="number" step="0.01" min="0"
                            placeholder="R$ 0,00" />
                    </div>

                    <div class="form-group text-center mt-4">
                        <input type="submit" value="Cadastrar" class="btn btn-success">
                        <a asp-action="Index" class="btn btn-secondary ml-2">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
