@model IEnumerable<GestaoDeFuncionarios.Models.Funcionario>

@{
    ViewData["Tittle"] = "GestaoDeFuncionarios";
}

<h1 class="text-center my-4">Lista de Funcionários</h1>

<p class="text-right">
    <a asp-action="Cadastrar" class="btn btn-primary mb-3">Cadastrar Novo Funcionário</a>
</p>

<table class="table table-bordered table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Funcao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Salario)
            </th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Funcao)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Salario)
                </td>
                <td class="text-center">
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-action="Deletar" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
